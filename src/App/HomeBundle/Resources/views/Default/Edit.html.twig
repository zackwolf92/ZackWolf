{% extends "::base.html.twig" %}

{% block body %}

    <div class="container">
        <h2 class="text-center">Update Records</h2>


        <div class="col-md-offset-3 col-md-6">
            <form action="" method="post">
                <label class="label label-success" for="">nom</label>
                <input required style="margin: 5px 0px;" type="text" value="{{ Info.name }}" name="name" placeholder="Enter Name" class="form-control">
                <label class="label label-success" for="">Email</label>
                <input required style="margin: 5px 0px;" type="text" value="{{ Info.email }}" name="email" placeholder="Enter Name" class="form-control">
                <label class="label label-success" for="">prenom</label>
                <input required style="margin: 5px 0px;" type="text" value="{{ Info.phone }}" name="phone" placeholder="Enter Name" class="form-control">
                <label class="label label-success" for="">Address</label>
                <textarea required style="margin: 5px 0px;" name="address" class="form-control" id="" cols="30" rows="10">{{ Info.address }}</textarea>
                <input type="submit" value="Submit" class="btn btn-success pull-right" style="margin-top: 10px;">
            </form>
        </div>

    </div>

{% endblock %}
