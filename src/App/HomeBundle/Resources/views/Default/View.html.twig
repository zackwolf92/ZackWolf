{% extends "::base.html.twig" %}

{% block body %}

    <div class="container">
        <h2 class="text-center">List of contacts</h2>

        <div class="col-md-offset-1 col-md-10">
            <div class="col-md-12">
                <table class="table table-striped table-bordered table-responsive">
                    <thead>
                    <tr>
                        <th>Sr#</th>
                        <th>nom</th>
                        <th>Prenom</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i=1 %}
                    {% for item in Info %}
                        <tr>
                            <td>{{ i }}</td>
                            <td>{{ item.name }}</td>
                            <td>{{ item.phone }}</td>
                            <td>{{ item.email }}</td>
                            <td>{{ item.address }}</td>
                            <td><a href="{{ path('france_edit',{id:item.id}) }}">edit</a></td>
                            <td><a href="{{ path('france_delete',{id:item.id}) }}">delete</a></td>
                        </tr>
                        {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}
